<!DOCTYPE html>
<html lang="{{ meta.lang }}">
  <head>
    <!-- include head  -->
    {% include "partials/head.njk" %}

    <!-- css inline on production -->
    {% if site.env %} {% set css %}{% include "styles.min.css" %}{% endset %}
    <style>
      {{ css | safe }}
    </style>
    {% else %}
    <link rel="stylesheet" href="/_assets/css/global.css" />
    <link rel="stylesheet" href="/_assets/css/cube.css" />
    {% endif %}

    <!-- defer js file  -->
    <script src="/_assets/app.min.js" defer></script>

    <!-- include base schema  -->
    {%- include "schemas/base-schema.njk" %}
  </head>

  <body>
    <div hidden>{% svgSprite %}</div>
    <!-- include logo, menu  -->
    {% include "partials/header.njk" %}

    {{ content | safe }}

    <!-- include lfooter  -->
    {% include "partials/footer.njk" %}

    <!-- load yt if needed  -->
    {% if youtube %}
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/@justinribeiro/lite-youtube@0.6.2/lite-youtube.js"
    ></script>
    {% endif %}
  </body>
</html>
