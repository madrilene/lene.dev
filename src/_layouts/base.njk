<!DOCTYPE html>
<html lang="{{ meta.lang }}">
  <head>
    <!-- include head  -->
    {% include "partials/head.njk" %}

    <!-- fonts preload -->
    <link
      rel="preload"
      href="/_assets/fonts/outfit/outfit-v5-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/_assets/fonts/charter/charter_regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/_assets/fonts/charter/charter_bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- check if production -->
    {% if meta.env %}
    <!-- set inline css -->
    {% set css %}{% include "global.min.css" %}{% include "cube.min.css" %}{% endset %}

    <style nonce="a2cx1c3">

      {{ css | cssmin | safe }}
    </style>
    {% else %}
    <link rel="stylesheet" href="/_assets/css/global.css" />
    <link rel="stylesheet" href="/_assets/css/cube.css" />
    {% endif %}

    <!-- defer js  -->
    <script src="/_assets/app.min.js" defer></script>

    <!-- plausible for gdpr-compliant stats  -->
    <script
      defer
      data-domain="lene.dev"
      src="https://plausible.io/js/plausible.js"
    ></script>

    <!-- include base schema  -->
    {%- include "schemas/base-schema.njk" %}
  </head>

  <body>
    <div class="wrapper z-10">{%- include "components/lightbulb.njk" %}</div>

    <div hidden>{% svgSprite %}</div>
    <!-- include logo, menu  -->
    {% include "partials/header.njk" %}

    {{ content | safe }}

    <!-- include lfooter  -->
    {% include "partials/footer.njk" %}
  </body>
</html>
